@{
    ViewData["Title"] = "Add Movie";
}

@model Movies

<h1>New Movie</h1>

<form method="post">
    <input asp-for="MovieId" type="hidden"/>

    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        <option value=""> --Select Category-- </option>
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.Category</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value=""> -- Select an Option -- </option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label> 
    <input asp-for="Edited" type="checkbox" />
    <br />
    <label asp-for="LentTo">Lent to</label>
    <input asp-for="LentTo"/>
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <input asp-for="CopiedToPlex" type="checkbox" />
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes"/>
    <br />
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form>